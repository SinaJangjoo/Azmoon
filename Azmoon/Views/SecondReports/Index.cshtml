@{
	Layout = "_Layout";
}

<div class=" container card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<h1 class="text-white">Second Report</h1>
		</div>
	</div>
</div>
<div class="card-body p-4">
	<form method="post" asp-action="ReportConfirm">
		<table id="tblData" class="table table-bordered table-striped pt-3" style="width:100%">
			<thead>
				<tr>
					<th>ID</th>
					<th>FirstName</th>
					<th>LastName</th>
					<th>PostalCode</th>
					<th>Tel</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><input name="selectedColumns" type="checkbox" class="rowCheckbox" value="id"></td>
					<td><input name="selectedColumns" type="checkbox" class="rowCheckbox" value="firstName"></td>
					<td><input name="selectedColumns" type="checkbox" class="rowCheckbox" value="lastName"></td>
					<td><input name="selectedColumns" type="checkbox" class="rowCheckbox" value="postalCode"></td>
					<td><input name="selectedColumns" type="checkbox" class="rowCheckbox" value="tel"></td>
					<td><input name="selectedColumns" type="checkbox" class="rowCheckbox" value="email"></td>
				</tr>
			</tbody>
		</table>
		<input type="hidden" id="checkboxValues" name="chekboxValues" runat="server" />
		<div class="container row p-lg-4">
			<h4>Write your title...</h4>
			<textarea name="title" placeholder="Write the Title..."></textarea>
		</div>
		<div class="container col-3 ">
			<button class="btn btn-success" type="submit">Save !</button>
		</div>

	</form>
</div>

